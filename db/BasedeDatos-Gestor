DROP TABLE IF EXISTS "Proveedores";
CREATE TABLE "Proveedores" (
"idProveedor" INTEGER PRIMARY KEY AUTOINCREMENT,
 "nombre" VARCHAR,
 "direccion" VARCHAR,
 "pais" VARCHAR
);
