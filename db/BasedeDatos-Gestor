DROP TABLE IF EXISTS "Clientes";
CREATE TABLE "Clientes" (
"idCliente" INTEGER PRIMARY KEY AUTOINCREMENT, 
"dni" VARCHAR NOT NULL  UNIQUE, 
"nombre" VARCHAR NOT NULL,
 "pais" VARCHAR,
 "email" VARCHAR,
"telefono" VARCHAR, 
"direccion" VARCHAR);
